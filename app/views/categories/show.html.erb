<h3>All items in <%= @category.title %></h3>

<ul>
<% @category.items.each do |item| %>
<div class="col-sm-3">

<div class="panel panel-info">
  <div class="panel-heading">
    <strong>Price</strong> <%= number_to_currency(item.price/100) %>
  </div>
    <div class="panel-body"><h5><%= link_to item.title, item_path(item) %></h5>

      <% if user_signed_in? %>
        <%= button_to 'Add to Cart', line_items_path(item_id: item), class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
</div>
<div class="col-sm-1">

</div>
<% end %>
</ul>
